<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    >

    <Button
        android:id="@+id/azure_communication_ui_chat_composite_view_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/azure_communication_ui_chat_composite_view_send_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Type message here"
        android:singleLine="false"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/azure_communication_ui_chat_composite_view_send_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/azure_communication_ui_chat_composite_view_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        app:layout_constraintStart_toEndOf="@+id/azure_communication_ui_chat_composite_view_send_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="2dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.azure.android.communication.ui.presentation.fragment.calling.hangup.ConfirmLeaveOverlayView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/azure_communication_ui_call_leave_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azure_communication_ui_color_call_leave_overlay"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="invisible"
    >

    <com.microsoft.fluentui.widget.Button
        android:id="@+id/azure_communication_ui_call_leave_confirm"
        style="@style/Widget.FluentUI.Button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:maxWidth="400dp"
        android:minWidth="400dp"
        android:text="@string/azure_communication_ui_call_leave_call"
        android:textAllCaps="false"
        />

    <com.microsoft.fluentui.widget.Button
        android:id="@+id/azure_communication_ui_call_leave_cancel"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/azure_communication_ui_cancel_leave_call_button"
        android:gravity="center"
        android:maxWidth="400dp"
        android:minWidth="400dp"
        android:text="@string/azure_communication_ui_call_cancel"
        android:textAllCaps="false"
        android:textColor="?attr/azure_communication_ui_calling_primary_color"
        />
</com.azure.android.communication.ui.presentation.fragment.calling.hangup.ConfirmLeaveOverlayView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:layout_marginVertical="4dp"
    android:padding="8dp"
    android:alpha="0.8"
    android:background="@drawable/azure_communication_ui_calling_corner_radius_rectangle_6dp_floating_header"
    android:importantForAccessibility="yes"
    android:focusable="true"
    android:orientation="horizontal"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/azure_communication_ui_calling_toast_notification_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:backgroundTint="@color/azure_communication_ui_calling_color_button_background_transparent"
        android:src="@drawable/azure_communication_ui_calling_ic_fluent_mic_off_24_filled_composite_button_filled_grey"
        android:importantForAccessibility="no"
        />
    <TextView
        android:id="@+id/azure_communication_ui_calling_toast_notification_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/azure_communication_ui_calling_color_call_diagnostic_notification_text"
        />

</LinearLayout>

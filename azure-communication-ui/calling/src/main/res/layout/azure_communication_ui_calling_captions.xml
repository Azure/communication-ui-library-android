<com.azure.android.communication.ui.calling.presentation.fragment.calling.captions.CaptionsRttView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/azure_communication_ui_calling_captions_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:importantForAccessibility="yes"
    android:padding="6dp"
    android:visibility="gone"
    tools:visibility="visible"
    android:background="@drawable/azure_communication_ui_calling_captions_background"
    android:elevation="2dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/azure_communication_ui_calling_captions_expanding_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azure_communication_ui_calling_color_bottom_drawer_background"
        >
        <LinearLayout
            android:id="@+id/azure_communication_ui_calling_captions_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/azure_communication_ui_calling_captions_header_drag_handle"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                >
                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/azure_communication_ui_calling_drag_handle"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="5dp"
                >
                <TextView
                    android:id="@+id/azure_communication_ui_call_captions_header_text"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/azure_communication_ui_calling_color_on_background"
                    android:textSize="16sp"
                    android:text="@string/azure_communication_ui_calling_captions_rtt_menu"
                    />
                <ImageButton
                    android:id="@+id/azure_communication_ui_calling_captions_on_button"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    app:srcCompat="@drawable/azure_communication_ui_calling_ic_fluent_closed_caption_24_regular_color"
                    android:background="@color/azure_communication_ui_calling_color_button_background_transparent"
                    android:contentDescription="@string/azure_communication_ui_calling_captions_turn_on"
                    app:layout_constraintEnd_toStartOf="@+id/azure_communication_ui_calling_captions_resize_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="6dp"
                    />
                <ImageButton
                    android:id="@+id/azure_communication_ui_calling_captions_resize_button"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    app:srcCompat="@drawable/azure_communication_ui_calling_ic_fluent_arrow_maximize_20_regular"
                    android:background="@color/azure_communication_ui_calling_color_button_background_transparent"
                    android:contentDescription="@string/azure_communication_ui_calling_maximize_captions_and_rtt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@+id/azure_communication_ui_calling_captions_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rtt_input_text"
            android:id="@+id/azure_communication_ui_calling_captions_recycler_view"
            android:background="@color/azure_communication_ui_calling_color_bottom_drawer_background"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="0dp"
            />

        <EditText
            android:id="@+id/rtt_input_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@drawable/azure_communication_ui_calling_outlined_edit_text"
            android:padding="12dp"
            android:autofillHints="none"
            android:imeOptions="actionSend"
            android:maxLength="2000"
            />

        <TextView
            android:id="@+id/hint_rtt_text_view"
            app:layout_constraintTop_toTopOf="@+id/rtt_input_text"
            app:layout_constraintBottom_toBottomOf="@+id/rtt_input_text"
            app:layout_constraintStart_toStartOf="@+id/rtt_input_text"
            app:layout_constraintEnd_toEndOf="@+id/rtt_input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:text="@string/azure_communication_ui_calling_rtt_edit_text_hint"
            android:textColor="@color/azure_communication_ui_calling_color_on_background"

            android:maxLines="1"
            android:importantForAccessibility="no"
            android:textSize="18sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeStepGranularity="2sp"
            />


        <LinearLayout
            android:id="@+id/azure_communication_ui_calling_captions_starting_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/azure_communication_ui_calling_captions_header"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/azure_communication_ui_calling_color_call_lobby_overlay"
            android:clickable="true"
            >

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/azure_communication_ui_calling_starting_captions"
                android:indeterminateTint="?attr/azure_communication_ui_calling_primary_color" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AzureCommunicationUICalling.ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/azure_communication_ui_calling_starting_captions"
                android:drawablePadding="4dp"
                android:focusable="true"
                android:gravity="center"
                android:importantForAccessibility="yes"
                android:stateListAnimator="@null"
                android:text="@string/azure_communication_ui_calling_starting_captions"
                android:textColor="@color/azure_communication_ui_calling_color_action_bar_subtext"
                android:textSize="@dimen/azure_communication_ui_calling_connecting_textsize" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.azure.android.communication.ui.calling.presentation.fragment.calling.captions.CaptionsRttView>
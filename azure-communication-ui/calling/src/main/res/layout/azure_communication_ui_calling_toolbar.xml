<com.azure.android.communication.ui.calling.presentation.fragment.setup.components.ToolbarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/azure_communication_setup_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/azure_communication_ui_calling_color_background"
    android:minHeight="40dp"

    android:focusable="false"
    android:orientation="horizontal"
    android:gravity="center"
    android:elevation="@dimen/azure_communication_ui_calling_setup_toolbar_elevation"
    >

    <ImageButton
        android:id="@+id/azure_communication_ui_navigation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/azure_communication_ui_calling_color_background"
        android:contentDescription="@string/azure_communication_ui_calling_call_setup_toolbar_navigation_button_announcement"
        android:focusable="true"
        android:src="@drawable/azure_communication_ui_calling_ic_fluent_arrow_left_24_filled"
        android:importantForAccessibility="yes"
        android:padding="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/azure_communication_ui_toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:focusable="true"
            android:accessibilityHeading="true"
            android:textColor="@color/azure_communication_ui_calling_color_action_bar_text"
            android:importantForAccessibility="yes"
            />

        <TextView
            android:id="@+id/azure_communication_ui_toolbar_subtitle"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:focusable="true"
            android:textColor="@color/azure_communication_ui_calling_color_action_bar_subtext"
            android:visibility="gone"
            android:importantForAccessibility="yes"
            />
    </LinearLayout>

</com.azure.android.communication.ui.calling.presentation.fragment.setup.components.ToolbarView>
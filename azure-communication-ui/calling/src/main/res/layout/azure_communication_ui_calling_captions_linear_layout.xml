<com.azure.android.communication.ui.calling.presentation.fragment.calling.captions.CaptionsLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/azure_communication_ui_calling_captions_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:importantForAccessibility="yes"
    android:padding="6dp"
    android:visibility="gone"
    tools:visibility="visible"
    >

    <LinearLayout
        android:id="@+id/azure_communication_ui_calling_captions_starting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/azure_communication_ui_calling_starting_captions"
            android:indeterminateTint="?attr/azure_communication_ui_calling_primary_color" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/AzureCommunicationUICalling.ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/azure_communication_ui_calling_starting_captions"
            android:drawablePadding="4dp"
            android:focusable="true"
            android:gravity="center"
            android:importantForAccessibility="yes"
            android:stateListAnimator="@null"
            android:text="@string/azure_communication_ui_calling_starting_captions"
            android:textColor="@color/azure_communication_ui_calling_color_action_bar_subtext"
            android:textSize="@dimen/azure_communication_ui_calling_connecting_textsize" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/azure_communication_ui_calling_captions_expanding_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/azure_communication_ui_calling_color_background"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/azure_communication_ui_calling_captions_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <ImageButton
                android:id="@+id/azure_communication_ui_calling_captions_resize_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/azure_communication_ui_calling_ic_fluent_arrow_maximize_24_regular"
                android:background="@color/azure_communication_ui_calling_color_button_background_transparent"
                android:contentDescription="@string/azure_communication_ui_calling_maximize_captions_and_rtt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@+id/azure_communication_ui_calling_captions_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rtt_input_text"
            android:id="@+id/azure_communication_ui_calling_captions_recycler_view"
            android:background="@color/azure_communication_ui_calling_color_bottom_drawer_background"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
             android:layout_height="0dp"/>

        <EditText
            android:id="@+id/rtt_input_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:visibility="gone"
            tools:visibility="visible"
            android:hint="Type message in real-time"
            android:background="@drawable/azure_communication_ui_calling_outlined_edit_text"
            android:padding="12dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.azure.android.communication.ui.calling.presentation.fragment.calling.captions.CaptionsLayout>
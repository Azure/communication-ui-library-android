<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/azure_communication_ui_calling_corner_radius_rectangle_4dp_drawer_background"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <com.microsoft.fluentui.widget.Button
            style="@style/Widget.FluentUI.Button.Borderless"
            android:id="@+id/buttonSend"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Send"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            style="@style/TextAppearance.FluentUI.Heading"
            android:text="Report a problem"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.microsoft.fluentui.widget.Button
            style="@style/Widget.FluentUI.Button.Borderless"
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancel"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <EditText
                    android:layout_weight="1"
                    android:id="@+id/editTextMessage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Please describe your issue..."
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:gravity="top"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.FluentUI.Caption"
                    android:text="We'll automatically attach logs.  "
                    />

                <TextView
                    android:textColor="@color/fluentui_communication_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.FluentUI.Caption"
                    android:text="Privacy Policy"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.FluentUI.Heading"
                    android:text="Attach screenshot"
                    android:paddingStart="10dp"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Switch
                    android:id="@+id/switchIncludeScreenshot"
                    android:checked="true"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

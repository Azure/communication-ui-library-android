<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base theme. -->
    <style name="AzureCommunicationUICalling.Theme" parent="Base.Theme.FluentUI">
        <!-- Primary brand color

        Current supported theming is the Primary Brand Color, which is represented by
        fluent_ui's communication colors & tints

        Not all values are currently used, however may be in the future. When supplying
        ensure that appropriate tints/shades for your Primary Color are supplied
        -->
        <item name="fluentuiDrawerBackgroundColor">
            @color/azure_communication_ui_calling_color_bottom_drawer_background
        </item>
        <item name="azure_communication_ui_calling_primary_color">
            @color/fluentui_communication_blue
        </item>
        <item name="azure_communication_ui_calling_foreground_on_primary_color">
            @color/azure_communication_ui_calling_color_on_primary
        </item>
        <item name="azure_communication_ui_calling_primary_color_tint10">#2B88D8</item>
        <item name="azure_communication_ui_calling_primary_color_tint20">
            @color/fluentui_communication_tint_20
        </item>
        <item name="azure_communication_ui_calling_primary_color_tint30">
            @color/fluentui_communication_tint_30
        </item>

        <item name="android:colorControlHighlight">
            @color/azure_communication_ui_calling_color_focus_highlight
        </item>
        <item name="titleTextColor">
            @color/azure_communication_ui_calling_color_action_bar_text
        </item>
        <item name="windowActionBar">
            false
        </item>
        <item name="windowNoTitle">
            true
        </item>
        <item name="android:windowBackground">
            @color/azure_communication_ui_calling_color_background
        </item>
    </style>

    <style name="AzureCommunicationUICalling.FluentUI.Button.Borderless" parent="@style/Widget.FluentUI.Button.Borderless">
        <item name="android:textColor">?attr/azure_communication_ui_calling_primary_color</item>
    </style>

    <style name="AzureCommunicationUICalling.AlertDialog.Theme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">@drawable/azure_communication_ui_calling_corner_radius_rectangle_4dp</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">@color/azure_communication_ui_calling_color_on_surface</item>
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/AzureCommunicationUICalling.FluentUI.Button.Borderless</item>
        <!-- Style for negative button -->
        <item name="buttonBarNegativeButtonStyle">@style/AzureCommunicationUICalling.FluentUI.Button.Borderless</item>

        <item name="android:backgroundTint">@color/azure_communication_ui_calling_color_bottom_drawer_background</item>

        <item name="android:textColor">?attr/azure_communication_ui_calling_primary_color</item>

        <item name="textAllCaps">false</item>
    </style>
</resources>